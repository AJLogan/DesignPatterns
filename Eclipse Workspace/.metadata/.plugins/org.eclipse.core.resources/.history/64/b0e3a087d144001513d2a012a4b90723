package exercise.tdd.videostore.start;

import static exercise.tdd.videostore.start.PriceCode.NEW_RELEASE;

import java.util.List;

public class Statement (Customer customer, List rentals){

	double amountOwed = 0;
	int frequentRenterPoints = 0;
	StringBuilder result = new StringBuilder();
	//add header lines
	result.append("\nRental Record for ");
	result.append(customer.getName());
	result.append("\n");
	for (Rental each : rentals) {
		double thisAmount = 0;
		//determine amounts for each line
		switch (each.getMovie().getPriceCode()) {
		case REGULAR:
			thisAmount += 2;
			if (each.getDaysRented() > 2)
				thisAmount += (each.getDaysRented() - 2) * 1.5;
			break;
		case NEW_RELEASE:
			thisAmount += each.getDaysRented() * 3;
			break;
		case CHILDRENS:
			thisAmount += 1.5;
			if (each.getDaysRented() > 3)
				thisAmount += (each.getDaysRented() - 3) * 1.5;
			break;
		}
		// add frequent renter points
		frequentRenterPoints++;
		// add bonus for a two day new release rental
		if ((each.getMovie().getPriceCode() == NEW_RELEASE)
				&& each.getDaysRented() > 1)
			frequentRenterPoints++;
		//show figures for this rental
		result.append("\t");
		result.append(each.getDaysRented());
		result.append("\t");
		result.append(each.getMovie().getTitle());
		result.append("\t");
		result.append(thisAmount);
		result.append("\n");
		//add cost of this rental to total cost
		amountOwed += thisAmount;
	}
	//add footer lines
	result.append("Amount owed is ");
	result.append(amountOwed);
	result.append("\n");
	result.append("You earned ");
	result.append(frequentRenterPoints);
	result.append(" frequent renter points\n");
	return result.toString();
}
